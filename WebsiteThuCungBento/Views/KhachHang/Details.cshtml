@model WebsiteThuCungBento.Models.KhachHang

@{
    ViewBag.Title = "Trang chi tiết thông tin khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG CHI TIẾT THÔNG TIN KHÁCH HÀNG</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ Tên :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Số Điện Thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            Địa Chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Ngày Sinh:
        </dt>

        <dd>
           @String.Format("{0:dd/MM/yyyy}",@Html.DisplayFor(model => model.NgaySinh))
        </dd>

        <dt>
            Hình Ảnh:
        </dt>

        <dd>
            @if (Model.HinhAnh == null)
            {
                <img src="~/img/account.png" height="100" width="100" />
            }
            else
            {
                <img src="~/img/@Model.HinhAnh" height="100" width="100" />
            }
        </dd>      
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaKH }) |
    @Html.ActionLink("Quay lại trang quản lý", "Index")
</p>