@model IEnumerable<WebsiteThuCungBento.Models.CTDH>

@{
    ViewBag.Title = "Chi tiết đơn hàng - TL PET'S HOME";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_ne1"></div>
<h2 style="padding-top:10px">CHI TIẾT ĐƠN HÀNG</h2><br />
@using (Html.BeginForm())
{
    <table border="1" style="width: 1404px; border: 1px solid #d0d0d0; border-collapse: collapse; margin-left:0px;">
        <tr>
            <th>Mã ĐH</th>
            <th>Mã SP</th>
            <th style="width: 222px">Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center">@item.MaDH</td>
                <td style="text-align: center">@item.MaSP</td>
                <td style="text-align: center">
                    <a href="@Url.Action("SanPham", "User", new { id = item.MaSP })" target="_blank">
                        <img src="~/img/@item.SanPham.HinhAnh" style="width: 80px;vertical-align:middle" />
                        <br>
                        <span style="font-weight: 700; color: #F60">@item.SanPham.TenSP</span>
                    </a>
                </td>
                <td style="text-align: center">
                    <span class="textCtrl">@item.SoLuong</span>
                </td>
                <td style="text-align: center">
                    <span style="font-weight: 700; color: #F60; font-size: 14px">@string.Format("{0:#,##0}", item.DonGia)<sup> VNĐ</sup></span>
                </td>
                <td style="text-align: center">
                    <span style="font-weight: 700; color: #F60; font-size: 14px">@string.Format("{0:#,##0}", item.ThanhTien)<sup> VNĐ</sup></span>
                </td>
                <td style="text-align: center">
                    <a href="@Url.Action("XoaMotCTDH", "DonHang", new { id = item.MaSP })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </table>
}

<ul class="roadlinktop">
    <a href="/DonHang/DonDatHang">
        <br />
    <li><span style="font-size:15px">Trở lại đơn hàng</span></li>
    </a>
</ul>