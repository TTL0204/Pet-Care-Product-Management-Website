@model IEnumerable<WebsiteThuCungBento.Models.ThuongHieu>

@{
    ViewBag.Title = "Trang quản lý thương hiệu ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG QUẢN LÝ THƯƠNG HIỆU SẢN PHẨM</h2>
<h5 style="width:100%; padding-top:10px">
    <u>
        <img style="margin-left:25px" src="~/img/icons/add.png" />
        @Html.ActionLink("THÊM MỚI THƯƠNG HIỆU", "Create")
    </u>
</h5>
<br />

<table class="table">
    <tr>
        <th>
            Mã Thương Hiệu
        </th>
        <th>
            Tên Thương Hiệu
        </th>
        <th>
            Logo của Thương Hiệu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTH)
            </td>
            <td>
                <img src="@Url.Content("~/img/" + @item.Logo)" height="100" width="100" />
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTH }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaTH }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTH })
            </td>
        </tr>
    }
</table>