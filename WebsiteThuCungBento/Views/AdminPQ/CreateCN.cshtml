@model WebsiteThuCungBento.Models.ChucNang_Quyen

@{
    ViewBag.Title = "Thêm chức năng mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG THÊM CHỨC NĂNG MỚI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        <div class="form-group">
            <label><strong>Tên chức năng:</strong></label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenCN, new { htmlAttributes = new { @class = "form-control" }, @Required = "required" })
                @Html.ValidationMessageFor(model => model.TenCN, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <label><strong>Mã chức năng:</strong></label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaCN, new { htmlAttributes = new { @class = "form-control" }, @Required = "required" })
                @Html.ValidationMessageFor(model => model.MaCN, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="tạo mới" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại trang quản lý", "DSChucNang")
            </div>
        </div>
    </div>
}