@model WebsiteThuCungBento.Models.DangNhapModel
@{
    <title>Đăng Nhập Admin</title>
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" href="~/img/logo/petlove.png" type="image/png" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <link href="~/Content/dangnhapadmin.css" rel="stylesheet" />
    <script language="javascript" src="~/Scripts/dangnhapadmin.js"></script>
    <div id="back">
        <canvas id="canvas" class="canvas-back"></canvas>
        <div class="backRight">
        </div>
        <div class="backLeft">
            <img class="product-image-feature" src="@Url.Content("~/img/pet960x1050(1).png")" />
        </div>
    </div>
    <div id="slideBox">
        <div class="topLayer">
            <div class="right">
                <div class="content">
                    <h2 style="text-align:center;">Đăng Nhập</h2>
                    <h1 style="text-align:center;">Tài khoản Admin - Nhân viên quản lý sản phẩm</h1>
                    <h4 style="color:red;">@ViewBag.ThongBao</h4>
                    @using (Html.BeginForm("DangNhap", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-element form-stack">
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <strong>@Html.LabelFor(model => model.TenDN, htmlAttributes: new { @class = "control-label col-md-2" })</strong>
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                            </div>
                            <input class="form-control text-box single-line input-full " data-val="true" data-val-required=" Tên đăng nhập không được để trống." id="TenDN" name="TenDN" type="text" value="">
                        </div>
                        <div class="form-element form-stack">
                            <strong>@Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })</strong>
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <input class="form-control text-box single-line input-full" data-val="true" data-val-length="Độ dài mật khẩu ít nhất 3 - 20 ký tự." data-val-length-max="20" data-val-length-min="3" data-val-required="Mật khẩu không được để trống. " id="MatKhau" name="MatKhau" type="password" value="">
                        </div>
                        <div class="form-element form-submit">
                            <button class="login" type="submit" name="DangNhap">Đăng Nhập</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>