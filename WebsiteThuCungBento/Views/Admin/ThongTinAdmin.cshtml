@model  WebsiteThuCungBento.Models.NhanVien
@{
    ViewBag.Title = "Thông Tin Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var ad = Session["TaiKhoanAdmin"] as WebsiteThuCungBento.Models.NhanVien;
}
<style>
    .edit {
        font-size: 16px;
        border: 1px solid #808080;
        padding: 5px;
        background-color: #000000;
        color: #ffffff;
    }
    .edit:hover{
        background-color:#808080;
        color:#ffffff;
    }
</style>
<div id="PageContainer" class="is-moved-by-drawer">
    <main class="main-content" role="main">
        <section id="page-wrapper">
            <div class="wrapper">
                <div class="inner">
                    <h1>Thông tin cá nhân</h1>
                    <hr class="hr--small">
                    <div class="grid">
                        <div class="grid__item two-thirds medium-down--one-whole">
                            <img src="~/img/@ad.Avatar" alt="Avatar" height="200" width="200" /> | 
                            <a href="@Url.Action("DoiMK","Admin",new { id = ad.MaNV })" class="edit">Đổi mật khẩu</a>
                            <br />
                            <br />
                            <ul style="font-size:20px;">
                                <li style="padding-bottom:20px">
                                    <strong>Loại tài khoản:</strong> @ad.TenLoai                                 
                                </li>
                                
                                <li style="padding-bottom:20px">
                                    <strong>Họ Tên:</strong> @ad.HoTen
                                </li>
                                
                                <li style="padding-bottom:20px">
                                    <strong>Địa Chỉ:</strong> @ad.DiaChi
                                </li>
                                
                                <li style="padding-bottom:20px">
                                    <strong>Số điện thoại:</strong> @ad.SDT
                                </li>
                                
                                <li >
                                    <strong>Email:</strong> @ad.Email
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>